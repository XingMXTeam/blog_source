{
  "hosting":{
     "public":"public",
     "ignore":[
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
     ],
     "redirects":[
        {
           "source":"/feed.xml",
           "destination":"/posts/index.xml",
           "type":301
        }
     ],
     "headers":[
        {
           "source":"**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
           "headers":[
              {
                 "key":"Access-Control-Allow-Origin",
                 "value":"*"
              },
              {
                  "key":"Cache-Control",
                  "value":"max-age=7200"
               }
           ]
        },
        {
           "source":"**/*.(analytics|firebase-analytics.js)",
           "headers":[
              {
                 "key":"Cache-Control",
                 "value":"max-age=7200"
              }
           ]
        },
        {
          "source":"**/*.@(jpg|jpeg|gif|png)",
          "headers":[
            {
                "key":"Cache-Control",
                "value":"max-age=7200"
            }
          ]
        },
        {
           "source":"404.html",
           "headers":[
              {
                 "key":"Cache-Control",
                 "value":"max-age=300"
              }
           ]
        }
     ]
  }
}
